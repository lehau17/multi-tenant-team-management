# App
PORT=9999
NODE_ENV=development

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=sass

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka/Redpanda
KAFKA_BROKERS=localhost:19092
KAFKA_CLIENT_ID=sass-app
KAFKA_GROUP_ID=sass-consumer-group

# Debezium CDC
DEBEZIUM_SERVER_NAME=dbserver1
DEBEZIUM_SCHEMA_NAME=public

# Outbox
OUTBOX_MAX_RETRY_COUNT=3
OUTBOX_BATCH_SIZE=100

# JWT Authentication
JWT_ACCESSTOKEN_SECRET_KEY=your-access-token-secret-key-change-in-production
JWT_REFRESHTOKEN_SECRET_KEY=your-refresh-token-secret-key-change-in-production
JWT_ACCESSTOKEN_EXPIRE_IN=3600000
JWT_REFRESHTOKEN_EXPIRE_IN=31536000
MESSAGE_QUEUE_STRATEGY=kafka
