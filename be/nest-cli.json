{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/be/tsconfig.app.json"
  },
  "monorepo": true,
  "projects": {
    "main-api": {
      "type": "application",
      "root": "apps/main-api",
      "entryFile": "main",
      "sourceRoot": "apps/main-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main-api/tsconfig.app.json"
      }
    },
    "bg-worker": {
      "type": "application",
      "root": "apps/bg-worker",
      "entryFile": "main",
      "sourceRoot": "apps/bg-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bg-worker/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "cache": {
      "type": "library",
      "root": "libs/cache",
      "entryFile": "index",
      "sourceRoot": "libs/cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cache/tsconfig.lib.json"
      }
    },
    "message-queue": {
      "type": "library",
      "root": "libs/message-queue",
      "entryFile": "index",
      "sourceRoot": "libs/message-queue/src",
      "compilerOptions": {
        "tsConfigPath": "libs/message-queue/tsconfig.lib.json"
      }
    },
    "outbox": {
      "type": "library",
      "root": "libs/outbox",
      "entryFile": "index",
      "sourceRoot": "libs/outbox/src",
      "compilerOptions": {
        "tsConfigPath": "libs/outbox/tsconfig.lib.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    }
  }
}